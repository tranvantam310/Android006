<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#111"
    android:id="@+id/rl_promotion"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_urlImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="2dp"
        android:src="@drawable/img_splash_activity" />

    <TextView
        android:id="@+id/tv_placeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_urlImage"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="what the hell"
        android:textColor="#EDE6E6"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_promotionName"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/tv_placeName"
        android:layout_toRightOf="@id/img_urlImage"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="hello"
        android:textColor="#CB620B"
        android:textSize="18dp" />

</RelativeLayout>