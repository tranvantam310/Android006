<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0CC86"
    android:orientation="vertical">

    <!--android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:src="@mipmap/img_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_login1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Đăng Nhập"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ff00" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Xin Chào"
        android:textColor="#000"
        android:textSize="49sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_login_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Đăng nhập bắng số điện thoại"
        android:textColor="#000"
        android:textSize="14sp" />

    <EditText
        android:inputType="number"
        android:id="@+id/edt_phone_number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/phone_number_bg"
        android:hint="Nhập vào số điện thoại"
        android:paddingHorizontal="10dp"
        android:paddingVertical="15dp" />

    <!--android:drawableRight="@drawable/ic_facebook1"-->

    <RelativeLayout
        android:id="@+id/rl_login_button"
        android:clickable="true"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/login_btn_bg_selectable_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_login"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#fff"
            android:text="Dang nhap"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_arrow_right"
            android:layout_margin="5dp"
            android:tint="#111"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook1" />

        <Button
            android:id="@+id/bt_dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/login_btn_bg"
            android:text="Đăng nhập"
            android:textColor="#FFFFFF" />-->

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_login_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hình thức đăng nhập khác" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_facebook1" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_google1" />

    </LinearLayout>


</LinearLayout>